{
  "name": "simulator-overlay",
  "version": "1.0.0",
  "description": "Simulator Overlay",
  "author": "Georgesatchy x Statsify Inc",
  "main": "app.js",
  "repository": {},
  "scripts": {
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make"
  },
  "license": "MIT",
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.54",
    "@electron-forge/maker-deb": "^6.0.0-beta.54",
    "@electron-forge/maker-rpm": "^6.0.0-beta.54",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.54",
    "@electron-forge/maker-zip": "^6.0.0-beta.54",
    "electron": "^21.1.0",
    "electron-wix-msi": "^3.0.4",
    "node-key-sender": "^1.0.11"
  },
  "dependencies": {
    "electron-squirrel-startup": "^1.0.0",
    "electron-store": "^6.0.1",
    "git-all": "0.0.3",
    "node-fetch": "^2.6.1",
    "node-red-contrib-sendkeys": "0.0.1",
    "node-schedule": "^1.3.2",
    "open": "^7.3.0",
    "semver": "^7.3.2"
  },
  "config": {
    "forge": {
      "packagerConfig": {
        "icon": "./img/simulator-logo.ico"
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "loadingGif": "./img/loading.gif",
            "setupIcon": "./img/simulator-logo.ico",
            "setupExe": "simulator-setup.exe",
            "name": "simulator-overlay"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ]
    }
  }
}
